<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--
    文本使用
     android:text="@string/foo_text1"   使用资源文件

     颜色使用
     android:textColor="#90EE90"    直接使用
     android:textColor="@color/fei_watermelon"  使用资源文件
     -->
    <TextView
        android:id="@+id/foo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/foo_text1"
        android:textColor="#90EE90"
        android:textSize="20sp" />

    <Button
        android:id="@+id/foo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回首页"/>

    <Button
        android:id="@+id/foo_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="去第三页"/>

    <TextView
        android:id="@+id/foo_text02"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="论语"
        android:background="#dda0dd"
        android:textSize="20sp" />
</LinearLayout>